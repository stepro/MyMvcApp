{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "dotnet restore",
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "restore" ]
        },
        {
            "taskName": "dotnet build",
            "dependsOn": "dotnet restore",
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "build" ]
        },
        {
            "taskName": "dotnet watch run",
            "dependsOn": "dotnet build",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }                
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "watch", "run" ]
        },
        {
            "taskName": "dotnet run",
            "dependsOn": "dotnet build",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                }                
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "run" ]
        }
    ]
}
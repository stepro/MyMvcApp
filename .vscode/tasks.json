{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "dotnet restore",
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "restore" ]
        },
        {
            "taskName": "dotnet build MyMvcApp",
            "dependsOn": "dotnet restore",
            "options": {
                "cwd": "${workspaceRoot}/MyMvcApp"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "build" ]
        },
        {
            "taskName": "dotnet watch run MyMvcApp",
            "dependsOn": "dotnet build MyMvcApp",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                },
                "cwd": "${workspaceRoot}/MyMvcApp"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "watch", "run" ]
        },
        {
            "taskName": "dotnet run MyMvcApp",
            "dependsOn": "dotnet build MyMvcApp",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                },
                "cwd": "${workspaceRoot}/MyMvcApp"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "run" ]
        },
        {
            "taskName": "dotnet watch test MyMvcApp.Tests",
            "dependsOn": "dotnet restore",
            "options": {
                "cwd": "${workspaceRoot}/MyMvcApp.Tests"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "watch", "test" ]
        },
        {
            "taskName": "dotnet test MyMvcApp.Tests",
            "dependsOn": "dotnet restore",
            "options": {
                "cwd": "${workspaceRoot}/MyMvcApp.Tests"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "test" ]
        },
        {
            "taskName": "dotnet build MyOtherApp",
            "dependsOn": "dotnet restore",
            "options": {
                "cwd": "${workspaceRoot}/MyOtherApp"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "build" ]
        },
        {
            "taskName": "dotnet watch run MyOtherApp",
            "dependsOn": "dotnet build MyOtherApp",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                },
                "cwd": "${workspaceRoot}/MyOtherApp"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "watch", "run" ]
        },
        {
            "taskName": "dotnet run MyOtherApp",
            "dependsOn": "dotnet build MyOtherApp",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                },
                "cwd": "${workspaceRoot}/MyOtherApp"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "run" ]
        },
        {
            "taskName": "docker init",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "-f", "docker-init.yml", "up" ]
        },
        // This should call docker-compose build (docker/compose issue #4790)
        {
            "taskName": "docker build MyMvcApp",
            "dependsOn": "docker down",
            "command": "docker",
            "suppressTaskName": true,
            "args": [ "build", "-f", "MyMvcApp.Dockerfile", "--target", "develop", "-t", "my-mvc-app:develop", "." ]
        },
        {
            "taskName": "docker run dotnet watch run MyMvcApp",
            "dependsOn": "docker build MyMvcApp",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--service-ports", "--rm", "my-mvc-app", "dotnet", "watch", "run" ],
            "isBackground": true
        },
        {
            "taskName": "docker run MyMvcApp",
            "dependsOn": "docker build MyMvcApp",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--service-ports", "--rm", "my-mvc-app" ],
            "isBackground": true
        },
        // This should call docker-compose build (docker/compose issue #4790)
        {
            "taskName": "docker build MyMvcApp.Tests",
            "dependsOn": "docker down",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "build", "my-mvc-app-tests" ]
        },
        {
            "taskName": "docker run dotnet watch test MyMvcApp.Tests",
            "dependsOn": "docker build MyMvcApp.Tests",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--rm", "my-mvc-app-tests", "dotnet", "watch", "test" ],
            "isBackground": true
        },
        {
            "taskName": "docker run MyMvcApp.Tests",
            "dependsOn": "docker build MyMvcApp.Tests",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "run", "--rm", "my-mvc-app-tests" ],
            "isBackground": true
        },
        {
            "taskName": "docker down",
            "command": "docker-compose",
            "suppressTaskName": true,
            "args": [ "down" ]
        }
    ]
}
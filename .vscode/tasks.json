{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "dotnet restore",
            "suppressTaskName": true,
            "command": "dotnet",
            "args": [ "restore" ]
        },
        {
            "taskName": "dotnet build MyMvcApp",
            "suppressTaskName": true,
            "options": {
                "cwd": "${workspaceRoot}/MyMvcApp"
            },
            "command": "dotnet",
            "args": [ "build" ]
        },
        {
            "taskName": "dotnet watch run MyMvcApp",
            "suppressTaskName": true,
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "http://+:5000"
                },
                "cwd": "${workspaceRoot}/MyMvcApp"
            },
            "command": "dotnet",
            "args": [ "watch", "run" ]
        },
        {
            "taskName": "dotnet watch test MyMvcApp.Tests",
            "suppressTaskName": true,
            "options": {
                "cwd": "${workspaceRoot}/MyMvcApp.Tests"
            },
            "command": "dotnet",
            "args": [ "watch", "test" ]
        },
        {
            "taskName": "dotnet build MyOtherApp",
            "suppressTaskName": true,
            "options": {
                "cwd": "${workspaceRoot}/MyOtherApp"
            },
            "command": "dotnet",
            "args": [ "build" ]
        },
        {
            "taskName": "dotnet watch run MyOtherApp",
            "suppressTaskName": true,
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development",
                    "ASPNETCORE_URLS": "http://+:5001"
                },
                "cwd": "${workspaceRoot}/MyOtherApp"
            },
            "command": "dotnet",
            "args": [ "watch", "run" ]
        },
        {
            "taskName": "docker-compose build my-mvc-app",
            "dependsOn": "docker-compose down",
            "suppressTaskName": true,
            "command": "docker", // This should use docker-compose (docker/compose issue #4790)
            "args": [ "build", "-f", "MyMvcApp.Dockerfile", "--target", "develop", "-t", "my-mvc-app:develop", "." ]
        },
        {
            "taskName": "docker-compose build my-other-app",
            "dependsOn": "docker-compose build my-mvc-app",
            "suppressTaskName": true,
            "command": "docker", // This should use docker-compose (docker/compose issue #4790)
            "args": [ "build", "-f", "MyOtherApp.Dockerfile", "--target", "develop", "-t", "my-other-app:develop", "." ]
        },
        {
            "taskName": "docker-compose build",
            "dependsOn": "docker-compose build my-other-app",
            "suppressTaskName": true,
            "command": "docker-compose",
            "args": [ "build" ]
        },
        {
            "taskName": "docker-compose up",
            // This should not be needed (docker/compose issue #4790)
            "dependsOn": "docker-compose build my-other-app",
            "suppressTaskName": true,
            "command": "docker-compose",
            "args": [ "up", "--build" ],
            "isBackground": true
        },
        {
            "taskName": "docker-compose down",
            "suppressTaskName": true,
            "command": "docker-compose",
            "args": [ "down" ]
        }
    ]
}
{
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "dotnet restore",
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "restore" ]
        },
        {
            "taskName": "dotnet build",
            "dependsOn": "dotnet restore",
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "build" ]
        },
        {
            "taskName": "dotnet watch run MyMvcApp",
            "dependsOn": "dotnet build",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                },
                "cwd": "${workspaceRoot}/MyMvcApp"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "watch", "run" ]
        },
        {
            "taskName": "dotnet run MyMvcApp",
            "dependsOn": "dotnet build",
            "options": {
                "env": {
                    "ASPNETCORE_ENVIRONMENT": "Development"
                },
                "cwd": "${workspaceRoot}/MyMvcApp"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "run" ]
        },
        {
            "taskName": "dotnet watch test MyMvcApp.Tests",
            "dependsOn": "dotnet restore",
            "options": {
                "cwd": "${workspaceRoot}/MyMvcApp.Tests"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "watch", "test" ]
        },
        {
            "taskName": "dotnet test MyMvcApp.Tests",
            "dependsOn": "dotnet restore",
            "options": {
                "cwd": "${workspaceRoot}/MyMvcApp.Tests"
            },
            "command": "dotnet",
            "suppressTaskName": true,
            "args": [ "test" ]
        }
    ]
}